<div class="col-md-4">
</div>
<div class="col-md-4">
  <center>
  <h5>Вход</h5>
  <br>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, autofocus: true, autocomplete: "email" %>
      <%= f.input :password, autocomplete: "off", label: "Пароль" %>


    <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, class: "custom-checkbox" %>
        <%= f.label "Запомнить меня" %>
    <% end -%>
    <br>
      <%= f.submit "Войти", class: "btn btn-success" %>
  <% end %>

  <%= render "devise/shared/links" %>
  </center>
</div>
